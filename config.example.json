{
	"irc": {
		"server": "irc.example.com",
		"nickname": "notifier",
		"options": {
			"autoConnect": true,
			"channels": [
				"#example"
			],
			"debug": true,
			"port": 6697,
			"realName": "IRC bot",
			"secure": true,
			"showErrors": true,
			"userName": "ircbot"
		}
	},
	"modules": {
		"commands": {
			"commands": {
				"door": true,
				"env": {
					"channels": {
						"123": "Example",
						"456": "Example 2"
					}
				},
				"events": true,
				"fauna": {
					"http": {
						"listen": {
							"host": "::",
							"port": 1234
						}
					},
					"oauth2": {
						"credentials": {
							"client": {
								"id": "xxxx",
								"secret": "xxxx"
							},
							"auth": {
								"tokenHost": "https://example.com"
							},
							"options": {
								"useBasicAuthorizationHeader": false,
								"useBodyAuth": true
							}
						},
						"authParams": {
							"redirect_uri": "urn:ietf:wg:oauth:2.0:oob",
							"scope": "public door_control door_latch_control"
						}
					},
					"urls": {
						"resourceOwner": "https://example.com/user",
						"actions": {
							"door": "https://example.com/door/actions"
						}
					}
				},
				"help": true,
				"lights": true,
				"music": true,
				"sun": {
					"lat": 42.70789247,
					"lng": 23.32527086
				},
				"update": {
					"startupScript": "/home/user/irc-notifier/start.sh"
				},
				"who": true,
				"whois": true
			}
		},
		"console": true,
		"controlSocket": {
			"path": "/tmp/ircbot.sock"
		},
		"login": {
			"username": "notifier",
			"password": "example"
		},
		"slap": true,
		"whois": true
	}
}
