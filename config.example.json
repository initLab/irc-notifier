{
	"socket": {
		"path": "/tmp/ircbot.sock"
	},
	"irc": {
		"server": "irc.example.com",
		"nickname": "notifier",
		"options": {
			"autoConnect": true,
			"channels": [
				"#example"
			],
			"debug": true,
			"port": 6697,
			"realName": "IRC bot",
			"secure": true,
			"showErrors": true,
			"userName": "ircbot"
		},
		"account": {
			"username": "notifier",
			"password": "example"
		}
	},
	"process": {
		"startupScript": "/home/user/ircBot/start.sh"
	},
	"fauna": {
		"http": {
			"listen": {
				"host": "::",
				"port": 1234
			}
		},
		"oauth2": {
			"credentials": {
				"client": {
					"id": "xxxx",
					"secret": "xxxx"
				},
				"auth": {
					"tokenHost": "https://example.com"
				},
				"options": {
					"useBasicAuthorizationHeader": false,
					"useBodyAuth": true
				}
			},
			"authParams": {
				"redirect_uri": "urn:ietf:wg:oauth:2.0:oob",
				"scope": "public"
			}
		},
		"urls": {
			"resourceOwner": "https://example.com/user",
			"actions": {
				"door": "https://example.com/door/actions"
			}
		}
	}
}
