{
	"irc": {
		"server": "irc.example.com",
		"nickname": "notifier",
		"options": {
			"autoConnect": true,
			"channels": [
				"#example"
			],
			"debug": true,
			"port": 6697,
			"realName": "IRC bot",
			"secure": true,
			"showErrors": true,
			"userName": "ircbot"
		}
	},
	"modules": {
		"_httpServer": {
			"listen": {
				"host": "::",
				"port": 1234
			}
		},
		"_mqtt": {
			"serverUrl": "mqtts://user:pass@example.com:8883/"
		},
		"_whois": true,
		"commands": {
			"commands": {
				"ac": {
					"tokenPath": "/tmp/daikin-tokenset.json"
				},
				"env": {
					"url": "http://example.com/status",
					"timeout": 20,
					"sensors": {
						"sensor-1": {
							"name": "Example"
						},
						"sensor-2": {
							"name": "Example 2"
						}
					}
				},
				"events": {
					"rssUrl": "https://example.com/feed/"
				},
				"fauna": {
					"oauth2": {
						"credentials": {
							"client": {
								"id": "xxxx",
								"secret": "xxxx"
							},
							"auth": {
								"tokenHost": "https://example.com"
							},
							"options": {
								"useBasicAuthorizationHeader": false,
								"useBodyAuth": true
							}
						},
						"authParams": {
							"redirect_uri": "urn:ietf:wg:oauth:2.0:oob",
							"scope": "account_data_read"
						}
					},
					"urls": {
						"resourceOwner": "https://example.com/user",
						"actions": {
							"door": "https://example.com/door/actions"
						}
					}
				},
				"games": {
					"servers": [{
						"type": "hldm",
						"host": "example.com"
					}, {
						"type": "cs16",
						"host": "example.com",
						"port": 27016
					}, {
						"type": "nexuiz",
						"host": "example.com"
					}]
				},
				"help": true,
				"sun": {
					"lat": 42.70789247,
					"lng": 23.32527086
				},
				"update": {
					"startupScript": "/home/user/irc-notifier/start.sh"
				},
				"us": {
					"rssUrl": "https://example.com/feed/",
					"keywords": [
						"foo",
						"bar"
					]
				},
				"weather": true,
				"who": true,
				"whois": true
			}
		},
		"console": true,
		"controlSocket": {
			"path": "/tmp/ircbot.sock"
		},
		"githubHook": {
			"channel": "#example",
			"secret": "xxxx"
		},
		"login": {
			"username": "notifier",
			"password": "example"
		},
		"stateNotifications": {
			"channel": "#example",
			"devices": [{
				"type": "plain",
				"name": "NetControl",
				"topic": "NetControl/example/out/status",
				"onValue": "online",
				"offValue": "offline",
				"onMessage": "is now online",
				"offMessage": "is now offline"
			}, {
				"type": "netcontrol",
				"name": "Device 1",
				"subTopic": "example",
				"channelNumber": 25,
				"onMessage": "is now on",
				"offMessage": "is now off"
			}, {
				"type": "espurna",
				"name": "Device 2",
				"prefix": "relay-2"
			}]
		},
		"rfNotifications": {
			"channel": "#example",
			"topic": "arduino-rf-serial/out/receive",
			"repeatTimeout": 5000,
			"devices": [{
				"message": "Message 1 received",
				"protocol": 1,
				"numBits": 24,
				"value": 123456,
				"timeout": 1000
			}]
		},
		"slap": true,
		"urlInfo": true
	}
}
